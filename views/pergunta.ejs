<%- include ("partials/header.ejs") %>

    <body>
        <%- include ("partials/navbar.ejs") %>
            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>

                <form method="POST" action="/responder">
                    <h3>Responda</h3>
                    <label>Resposta: </label>
                    <textarea placeholder="Descreva sua resposta aqui" class="form-control" name="corpo"></textarea>


                    <!-- <textarea placeholder="Descreva sua pergunta aqui" class="form-control"
                    name="descricao"></textarea> -->
                    <br>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-primary">Responder</button>

                </form>
                <hr>
                <h3>Respostas</h3>
                <hr>
                <% respostas.forEach(resposta=> {%>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <%= resposta.corpo %> <br>
                        </div>
                    </div>

                    <% }) %>

            </div>
    </body>

    <%- include ("partials/footer.ejs") %>